{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "husky": "^4.2.3",
    "lerna": "^3.16.4"
  },
  "scripts": {
    "prebuild": "lerna bootstrap",
    "build": "lerna run build --stream",
    "prebuild:ci": "lerna bootstrap",
    "build:ci": "lerna run build --stream && lerna run test --stream",
    "build:all": "npm run prebuild && npm run build"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
